{% extends 'base_back.html.twig' %}

{% block title %}Brand index{% endblock %}

{% block body %}
    <h1>Brand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
                <th>move</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('back_brand_show', {'id': brand.id}) }}">show</a>
                    <a href="{{ path('back_brand_edit', {'id': brand.id}) }}">edit</a>
                </td>
                <td>
                    <a href="{{ path('back_brand_move', {'id': brand.id, 'position': 'up'}) }}">Up</a>
                    <a href="{{ path('back_brand_move', {'id': brand.id, 'position': 'down'}) }}">Down</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_brand_new') }}">Create new</a>
{% endblock %}
